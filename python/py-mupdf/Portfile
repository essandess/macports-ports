if {${name} ne ${subport}} {
    depends_build-append \
                    port:py${python.version}-setuptools

    depends_lib-append \
                    port:mupdf \
                    port:swig-python

    # diff -NaurdwB ./py-mupdf-orig/setup.py ./py-mupdf-new/setup.py | sed -E -e 's/\.\/py-mupdf-(orig|new)/\.\//' | sed -E -e 's|/opt/local|@PREFIX@|g' > ~/Downloads/patch-setup_py.diff
    patchfiles-append \
                    patch-setup_py.diff

    post-patch {
        reinplace "s|@PREFIX@|${prefix}|g" \
                    ${worksrcpath}/setup.py
    }

    # PYMUPDF_SETUP_MUPDF_BUILD must be empty to turn off mupdf download
    foreach phase {configure build destroot} {
        ${phase}.env-append \
                    PYMUPDF_SETUP_MUPDF_BUILD=
    }
}
