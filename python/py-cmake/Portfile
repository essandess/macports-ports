PortSystem          1.0
PortGroup           python 1.0

name                py-cmake
version             3.29.3
revision            0
categories-append   devel
license             BSD
supported_archs     arm64 x86_64

maintainers         nomaintainer

description         CMake is an open-source, cross-platform family of tools designed to build, test and package software

long_description    {*}${description}

homepage            https://cmake.org/

checksums           rmd160  067c470fa8bd0e07f7e58d6d16c59d3574b8b0af \
                    sha256  d04adb1a8b878e92a734742cb0db9c59e3828abcf8ec9c930eb8a01faa00c9df \
                    size    30216

python.versions     38 39 310 311 312

if {${name} ne ${subport}} {
    depends_build-append \
        path:bin/cmake:cmake \
        path:bin/ninja:ninja \
        port:py${python.version}-pathspec \
        port:py${python.version}-pip \
        port:py${python.version}-pyproject_metadata \
        port:py${python.version}-scikit-build-core

    depends_test-append \
        port:py${python.version}-pytest

    post-destroot {
        xinstall -m 0644 \
            ${destroot}${python.pkgd}/${python.rootname}/data/${python.rootname}/_version.py \
            ${destroot}${python.pkgd}/${python.rootname}
            
        set docdir ${prefix}/share/doc/${subport}
        xinstall -d ${destroot}${docdir}
        xinstall -m 0644 -W ${worksrcpath} LICENSE_BSD_3 README.rst \
            ${destroot}${docdir}
    }

    test.run        yes
    test.target     tests
}
