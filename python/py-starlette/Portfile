PortSystem          1.0
PortGroup           github 1.0
PortGroup           python 1.0

github.setup        encode starlette 0.31.0
revision            0
name                py-${github.project}
categories-append   devel

license             BSD
maintainers         nomaintainer
supported_archs     noarch
platforms           {darwin any}

description         The little ASGI library that shines.
long_description    Starlette is a lightweight ASGI framework/toolkit, \
                    which is ideal for building high performance \
                    asyncio services.

checksums           rmd160  40dc23db8e6fa3063723e5a5507730b522b0d2b1 \
                    sha256  5b5f59b88f19129386a0e6f05d09512782785588ead2e83d875b65f65341d5a7 \
                    size    2845716

python.versions     37 38 39 310 311

if {${name} ne ${subport}} {
    depends_lib-append \
                    port:py${python.version}-setuptools

    depends_run-append \
                    port:py${python.version}-anyio

    if {${python.version} < 38} {
        depends_run-append \
                    port:py${python.version}-typing_extensions
    }

    if {${python.pep517}} {
        depends_build-append \
                    port:py${python.version}-hatchling
    }

    depends_test-append \
                    port:py${python.version}-databases \
                    port:py${python.version}-pytest

    test.run        no
    test.cmd        py.test-${python.branch}
    test.target
    test.env        PYTHONPATH=${worksrcpath}/build/lib
}
